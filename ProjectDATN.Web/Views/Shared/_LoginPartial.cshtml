@using Microsoft.AspNetCore.Identity
@using ProjectDATN.Data.Entities;


@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right" style="margin-top:-1px">
        <ul class="nav navbar-nav navbar-right" style="list-style:none;display:flex">
            <li class="nav-item" >
                <a class="nav-link text-light" asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage" style="font-size:15px;margin:-15px 0px">
                    <i class="fa-regular fa-user" style="font-size:20px"></i>
                    @UserManager.GetUserName(User)!
                </a>
            </li>
            <li class="nav-item" style="margin:-13px 0px">
                <button title="Đăng xuất" type="submit" class="btn btn-link navbar-btn navbar-link text-light" style="color:white">
                    <i class="icon-signout" style="font-size:15px;color:white;">Đăng Xuất</i>
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">

        <li class="nav-item" style="list-style:none">
            <a title="Đăng nhập" class="nav-link text-light" asp-area="Identity" asp-controller="Account" asp-action="Login" style="margin:-15px">
                <i class="fa-regular fa-user" style="font-size:20px"></i>
            </a>
        </li>
    </ul>
}