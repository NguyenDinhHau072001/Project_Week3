@model ProjectDATN.Data.Entities.Contact
@{
    ViewData["Title"] = "Contatct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center;font-size:25px">Hãy điền feedback của bạn vào form dưới đây</h1>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success" style="background-color:aqua; font-size:15px">
        @TempData["AlertMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>

    </div>
}
<div class="row" style="text-align:center">
    <div class="col-md-4">
        <form asp-action="Contact" asp-controller="Contact" asp-area="" enctype="multipart/form-data">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

            <div class="form-group" style="margin:20px;text-align: left;padding-left: 185px">
                <h3 style="font-size:18px">Họ và tên</h3>
                <input type="text" asp-area="" asp-for="Name" class="form-control" style="border:1px solid gray; height:25px;width:800px" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin:20px;text-align: left;padding-left: 185px">
                <h3 style="font-size:18px">Email</h3>
                <input type="email" asp-area="" asp-for="Email" class="form-control" style="border:1px solid gray; height:25px;width:800px" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin:20px;text-align: left;padding-left: 185px">
                <h3 style="font-size:18px">Số điện thoại</h3>
                <input asp-area="" asp-for="PhoneNumber" class="form-control" style="border:1px solid gray; height:25px;width:800px" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:20px;text-align: left;padding-left: 185px">
                <h3 style="font-size:18px">Nội dung</h3>
                <textarea asp-area="" asp-for="Message" class="" style="border:1px solid gray; height:100px; width:800px"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gửi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


