
@model ProjectDATN.Data.Entities.Brand
@{
    ViewData["Title"] = "Create";
}
<h1>Thêm mới danh mục</h1>


<h1>Create</h1>

<h4>Danh sách thương hiệu</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Brand" asp-area="Admin">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label class="control-label">Brand Name</label>
                <input asp-area="Admin" asp-for="Name" class="form-control" />
