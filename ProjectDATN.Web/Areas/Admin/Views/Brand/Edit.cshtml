@model ProjectDATN.Data.Entities.Brand
@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa thông tin danh mục</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Brand" asp-area="Admin">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Brand Name</label>
                <input asp-area="Admin" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-area="Admin" type="submit" value="Save" class="btn btn-primary" />
                <a asp-area="Admin" asp-action="Index" asp-controller="Brand" class="btn btn-light">Back to List</a>
            </div>
        </form>
    </div>
</div>



