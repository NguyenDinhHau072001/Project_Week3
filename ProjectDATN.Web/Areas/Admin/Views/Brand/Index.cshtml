@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function(){
                var id= $(this).data('id');
                var conf = confirm('Do you want to delete this brand ?');
                if(conf == true){
                    //$('body').load('/admin/brand/delete?id='+id);
                    $.ajax({
                        url:'/admin/brand/deletepost',
                        type: 'POST',
                        data: {id: id},
                        success: function(rs){
                            if(rs.success){
                                $('#row_'+id).remove();
                            }
                        }
                    });
                }
            });
        });
    </script>
}
